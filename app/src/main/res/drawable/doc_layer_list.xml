<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:layout_height="match_parent">
            <gradient
                android:startColor="@color/secondary_text"
                android:endColor="@color/divider"
                android:centerColor="@color/colorPrimaryDark"
                android:type="sweep"
                />
            <corners
                android:bottomLeftRadius="7dp"
                android:topRightRadius="7dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="3dp"
        android:left="1dp"
        android:top="1dp">
        <shape android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <solid android:color="@color/icons" />
            <corners
                android:bottomLeftRadius="7dp"
                android:topRightRadius="7dp" />
        </shape>
    </item>

</layer-list>